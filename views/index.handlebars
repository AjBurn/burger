<div class="row">
  <div class="col-4 text-right">

    <h3 class="my-3 text-center">Burgers</h3>
    <div class="list-group">
      {{#each burgers}}
        {{#unless this.devoured}}

          <div class="list-group-item clearfix">
            {{this.burger_name}}
            <span class="pull-right">
              <button class="btn btn-xs btn-danger devour" data-id="{{this.id}}">Devour</button>
            </span>
          </div>

        {{/unless}}
      {{/each}}
    </div>


  </div>
  <div class="col-4">
    <h1 class="my-3 text-center">Eat Da Burger</h1>
    <img src="/assets/imgs/burger.jpg" alt="burger" class="img-fluid mb-3">
    <form id="add-burger">
      <div class="form-group">
        <input type="text" name="burger-name" id="burger-name" class="form-control" placeholder="New Burger Name...">
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-info btn-block">Add your favorite burger!</button>
      </div>
    </form>
  </div>
  <div class="col-4">

    <h3 class="my-3 text-center">Devoured Burgers</h3>
    <div class="list-group">
      {{#each burgers}}
        {{#if this.devoured}}
          <div class="list-group-item clearfix">
            Wow! <b>{{this.burger_name}}</b> was delicious!
          </div>
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>